<Application x:Class="XabboImager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             >
    <Application.Resources>
        <SolidColorBrush x:Key="bg" Color="#121417"/>
        <SolidColorBrush x:Key="panel" Color="#1A1D22"/>
        <SolidColorBrush x:Key="border" Color="#2A2F37"/>
        <SolidColorBrush x:Key="txt" Color="#E7E9ED"/>
        <SolidColorBrush x:Key="sub" Color="#99A1AE"/>
        <SolidColorBrush x:Key="accent" Color="#4F8EF7"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="#0F1215"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="#0F1215"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.ControlLightBrushKey}" Color="#1A1D22"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.ControlDarkBrushKey}" Color="#0F1215"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#2A6DF7"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.MenuBrushKey}" Color="#0F1215"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.MenuTextBrushKey}" Color="#E7E9ED"/>
        <Style TargetType="Window">
            <Setter Property="Background" Value="{StaticResource panel}"/>
            <Setter Property="Foreground" Value="{StaticResource txt}"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
        <Style TargetType="Border">
            <Setter Property="CornerRadius" Value="0"/>
            <Setter Property="Background" Value="{StaticResource panel}"/>
            <Setter Property="BorderBrush" Value="{StaticResource border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Background" Value="#22262D"/>
            <Setter Property="BorderBrush" Value="#3A404B"/>
            <Setter Property="Foreground" Value="{StaticResource txt}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2A2F37"/>
                    <Setter Property="BorderBrush" Value="#4F8EF7"/>
                    <Setter Property="Foreground" Value="#000000"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#2A6DF7"/>
                    <Setter Property="BorderBrush" Value="#2A6DF7"/>
                    <Setter Property="Foreground" Value="#000000"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.6"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource panel}"/>
            <Setter Property="BorderBrush" Value="{StaticResource border}"/>
            <Setter Property="Foreground" Value="{StaticResource txt}"/>
            <Setter Property="CaretBrush" Value="{StaticResource txt}"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="SelectionBrush" Value="#2A6DF7"/>
            <Setter Property="SelectionTextBrush" Value="#FFFFFF"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource panel}"/>
            <Setter Property="BorderBrush" Value="{StaticResource border}"/>
            <Setter Property="Foreground" Value="{StaticResource txt}"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid SnapsToDevicePixels="True">
                            <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1"/>
                            <ContentPresenter x:Name="content" Margin="6,0,28,0" VerticalAlignment="Center" HorizontalAlignment="Left" Content="{TemplateBinding SelectionBoxItem}">
                                <ContentPresenter.Resources>
                                    <Style TargetType="TextElement">
                                        <Setter Property="Foreground" Value="{StaticResource txt}"/>
                                    </Style>
                                </ContentPresenter.Resources>
                            </ContentPresenter>
                            <ToggleButton x:Name="toggle" Grid.RowSpan="2" HorizontalAlignment="Right" VerticalAlignment="Stretch" Background="Transparent" BorderBrush="Transparent" Focusable="False" IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}">
                                <Path Width="10" Height="6" Stretch="Fill" Fill="{StaticResource txt}" Data="M 0 0 L 10 0 L 5 6 Z" HorizontalAlignment="Center" VerticalAlignment="Center" IsHitTestVisible="False"/>
                            </ToggleButton>
                            <Popup x:Name="popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" AllowsTransparency="True" Focusable="False" StaysOpen="False">
                                <Border Background="{StaticResource panel}" BorderBrush="{StaticResource border}" BorderThickness="1">
                                    <ScrollViewer CanContentScroll="True" Background="{StaticResource panel}">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                                <Setter TargetName="content" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#0F1215"/>
            <Setter Property="Foreground" Value="{StaticResource txt}"/>
            <Setter Property="BorderBrush" Value="{StaticResource border}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="6,3"/>
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="#1A1D22"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#2A2F37"/>
                    <Setter Property="Foreground" Value="{StaticResource txt}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="Slider">
            <Setter Property="Foreground" Value="{StaticResource txt}"/>
            <Setter Property="Background" Value="#0F1215"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource txt}"/>
            <Setter Property="Margin" Value="4"/>
        </Style>
        <Style TargetType="RadioButton">
            <Setter Property="Foreground" Value="{StaticResource txt}"/>
            <Setter Property="Margin" Value="4"/>
        </Style>
    </Application.Resources>
</Application>
